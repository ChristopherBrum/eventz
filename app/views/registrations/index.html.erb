<h1>Registrations for <%= link_to @event.name, @event %></h1>
<ul class="registrations">
	<% @registrations.each do |r| %>
		<li>
			<%= link_to r.user.name, r.user %> &bull; found event through: 
			<%= r.how_heard %>
			<%= link_to "Delete", event_registration_path(@event, r.id), 
				class: "button destroy", 
				data: {
					turbo_method: :delete, turbo_confirm: "Are you sure?"
				} 
			%>
		</li>
	<% end %>
</ul>